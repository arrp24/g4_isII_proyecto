<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">

	<named-query name="Usuario.getByCedula">
		<query>         
            SELECT _usuario 
            FROM Usuario _usuario 
            WHERE _usuario.cedula = :usCedula
        </query>
	</named-query>

	<named-query name="RolPorUsuario.getByCedulaAndClave">
		<query>         
            SELECT _rolPorUsuario 
            FROM RolPorUsuario _rolPorUsuario 
            WHERE _rolPorUsuario.usuario.cedula = :roCedula
            AND _rolPorUsuario.clave = :roClave
        </query>
	</named-query>

	<named-query name="OpcionMenuPorRol.getOpcionMenuPorRol">
		<query>         
            SELECT _opcionMenuPorRol
            FROM OpcionMenuPorRol _opcionMenuPorRol 
            WHERE _opcionMenuPorRol.id.rolId = :usRol
        </query>
	</named-query>

	<named-query name="OpcionMenuPorRol.deleteOpcionMenuByRol">
		<query>         
			DELETE 
			FROM OpcionMenuPorRol _opcionMenuPorRol 
            WHERE _opcionMenuPorRol.id.rolId = :usRol
        </query>
	</named-query>

</entity-mappings>
