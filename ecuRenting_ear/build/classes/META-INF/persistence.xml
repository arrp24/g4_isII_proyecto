<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="geoportalDs">
		<jta-data-source>java:/jboss/datasources/geoportal</jta-data-source>
		<mapping-file>META-INF/jpql/querys.xml</mapping-file>
			<class>com.ls.gestion.entity.InventarioTransito</class>
			<class>com.ls.gestion.entity.Inventario</class>
			<class>com.ls.gestion.entity.HistorialMantenimiento</class>
			<class>com.ls.gestion.entity.Recorrido</class>
			<class>com.ls.gestion.entity.PedidoEntrega</class>
			<class>com.ls.gestion.entity.UbicacionInventario</class>


		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
		</properties>
	</persistence-unit>

</persistence>